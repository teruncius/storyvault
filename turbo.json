{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "target/**"],
      "env": ["NODE_ENV"]
    },
    "backend#build": {
      "dependsOn": ["^frontend#build"],
      "outputs": ["target/**"],
      "env": ["NODE_ENV"]
    },
    "dev": {
      "dependsOn": ["^dev", "^build"],
      "cache": false,
      "persistent": true
    },
    "format": {
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"]
    }
  }
}
